<div class="row">
  <h3 class="center-align">Courses</h3>
</div>

<div class="row">
  <% @courses.each do |c| %>
    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= c.short_name %>: <%= c.name %></span>
          <p><%= c.description %></p>
        </div>
        <div class="card-action">
          <a href="#">Enroll</a>
          <a href="#">More Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
